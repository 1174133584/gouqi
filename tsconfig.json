{
    "compilerOptions": {
        "target": "es2017",
        "jsx": "react-native",
        // "declaration": true,
        // "module": "commonjs",
        "removeComments": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports":true,
        // "noEmitOnError": true,
        "outDir": "lib",
        "strictNullChecks": true,
        "noImplicitThis": true,
        "inlineSourceMap": true
    },
    "filesGlob": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "lib",
    "__tests__",
    "**/*.test.ts"
  ],
    "compileOnSave": false
}
